<ul>
  <% @request.errors.full_messages.each do |m|  %>
  <li class="notice"><%= m %></li>
  <% end %>
</ul>


<%= form_for @request do |f| %>
<%# f is form object %>
<div>
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>

<div>
  <%= f.label :email %>
  <%= f.text_field :email %>
</div>

<div>
  <%= f.label :department %>
  
  <%= f.radio_button :department, "Sales" %>
  <%= f.label :department_sales, "Sales" %>

  <%= f.radio_button :department, "Marketing" %>
  <%= f.label :department_marketing, "Marketing" %>

  <%= f.radio_button :department, "Technical" %>
  <%= f.label :department_technical, "Technical" %>
</div>

<div>
  <%= f.label :message %>
  <%= f.text_area :message %>
</div>

<div>
  <%= f.submit %>
</div>

<% end %>
